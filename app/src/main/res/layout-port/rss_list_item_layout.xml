<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/rss_vertical_margin"
    android:paddingEnd="@dimen/rss_horizontal_margin"
    android:paddingStart="@dimen/rss_horizontal_margin"
    android:paddingTop="@dimen/rss_vertical_margin">

    <ImageView
        android:id="@+id/rss_list_item_image"
        android:layout_width="@dimen/rss_list_item_image_size"
        android:layout_height="@dimen/rss_list_item_image_size"
        android:background="@color/colorAccent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rss_horizontal_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rss_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="@dimen/rss_list_item_title_font_size" />

        <TextView
            android:id="@+id/rss_list_item_try_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:padding="@dimen/rss_list_item_button_padding"
            android:text="@string/try_button_label"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/rss_list_item_small_font_size"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>