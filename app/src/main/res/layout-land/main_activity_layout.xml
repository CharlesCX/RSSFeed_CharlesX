<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/tool_bar_layout" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/main_activity_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <android.support.v4.widget.ContentLoadingProgressBar
        android:id="@+id/main_activity_loading_bar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="@dimen/rss_list_loading_progress_bar_size"
        android:layout_height="@dimen/rss_list_loading_progress_bar_size"
        android:layout_gravity="center" />
</FrameLayout>